<!--<resources xmlns:tools="http://schemas.android.com/tools">-->
<resources>

    <style name="Theme.AppCompat.Translucent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
<!--        <item name="android:windowContentOverlay">@null</item>-->
<!--        <item name="android:windowNoTitle">true</item>-->
<!--        <item name="android:windowIsFloating">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
<!--        <item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="Coefficient">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/_0</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Operator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="Variable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30pt</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">?attr/numberButtonBackground</item>
<!--        <item name="background">?attr/numberButtonBackground</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10pt</item>
        <item name="android:layout_margin">0.5pt</item>
    </style>

    <style name="EquationVariable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30pt</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">?attr/actionButtonBackground</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">0.5pt</item>
    </style>

    <style name="EquationVariableX2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30pt</item>
        <item name="android:layout_weight">10</item>
        <item name="backgroundTint">?attr/actionButtonBackground</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">0.5pt</item>
    </style>

    <style name="RowOperationButton">
        <item name="android:layout_height">35pt</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="layout_constraintWidth_percent">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8pt</item>
        <item name="backgroundTint">?attr/actionButtonBackground</item>
    </style>

    <style name="SwapButton">
        <item name="android:layout_height">28pt</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="layout_constraintWidth_percent">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8pt</item>
        <item name="android:layout_margin">5dp</item>
        <item name="backgroundTint">@color/numberButtonColor_0</item>
    </style>

    <style name="theme_3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
